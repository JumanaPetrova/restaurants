<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_restaurant">

    <fragment
        android:id="@+id/navigation_restaurant"
        android:name="com.example.restaurantapp.ui.restaurants.RestaurantsFragment"
        android:label="@string/title_restaurant"
        tools:layout="@layout/fragment_reviews" />

    <fragment
        android:id="@+id/navigation_hits"
        android:name="com.example.restaurantapp.ui.hits.HitsFragment"
        android:label="@string/title_hits"
        tools:layout="@layout/fragment_hits" />

    <fragment
        android:id="@+id/navigation_review"
        android:name="com.example.restaurantapp.ui.reviews.ReviewsFragment"
        android:label="@string/title_review"
        tools:layout="@layout/fragment_restaurants" />
</navigation>